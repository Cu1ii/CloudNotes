<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cu1.cloudnotes.dao.CategoryMapper">
    <sql id="selectFields">
        id
        ,category_id,title,content,status,create_time
    </sql>
    <sql id="insertFields">
        id
        ,category_id,title,content,status,create_time
    </sql>
    <select id="selectById" resultType="Note">
        select
        <include refid="selectFields"></include>
        from note
        where id = #{id}
    </select>
    <select id="selectByCategoryId" resultType="Note">
        select
        <include refid="selectFields"></include>
        from note
        where category_id = #{categoryId}
    </select>
    <insert id="insertNote" parameterType="Note" keyProperty="id">
        insert into category (<include refid="insertFields"></include>)
        values (#{id},#{categoryId},#{title},#{content},#{status},#{createTime})
    </insert>
    <delete id="deleteById">
        delete
        from note
        where id = #{id}
    </delete>
    <update id="updateStatus">
        update note
        set status = #{status}
        where id = #{id}
    </update>
    <update id="updateTitle">
        update note
        set title = #{title}
        where id = #{id}
    </update>
    <update id="updateStatus">
        update note
        set content = #{content}
        where id = #{id}
    </update>
</mapper>
